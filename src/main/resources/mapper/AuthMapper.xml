<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jiade.massageshopmanagement.mapper.AuthMapper">

    <resultMap id="AdminAccountMap" type="com.jiade.massageshopmanagement.model.AdminAccount">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="passwordHash" column="password_hash"/>
    </resultMap>

    <select id="selectByUsername" resultMap="AdminAccountMap">
        SELECT id, username, password_hash
        FROM admin_account
        WHERE username = #{username}
            LIMIT 1
    </select>

</mapper>