<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jiade.massageshopmanagement.mapper.AuthMapper">

    <!-- 根据用户名查询管理员账号 -->
    <select id="selectByUsername" resultType="com.jiade.massageshopmanagement.model.AdminAccount">
        SELECT id, username, password
        FROM admin_account
        WHERE username = #{username}
            LIMIT 1
    </select>

</mapper>